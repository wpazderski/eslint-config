{
    "name": "@wpazderski/eslint-config",
    "version": "1.0.5",
    "description": "Common Eslint flat configs with strict options enabled",
    "keywords": [
        "eslint",
        "config"
    ],
    "author": "Witold Pazderski",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wpazderski/eslint-config.git"
    },
    "homepage": "https://github.com/wpazderski/eslint-config",
    "bugs": {
        "url": "https://github.com/wpazderski/eslint-config/issues"
    },
    "type": "module",
    "exports": {
        "./*": "./dist/*"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "prepare": "husky",
        "build": "rimraf ./dist/ && rimraf -g ./node_modules/.tmp/*.tsbuildinfo && tsc -b",
        "lint-check": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0",
        "lint-fix": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0 --fix",
        "prettier-check": "prettier ./ --check",
        "prettier-fix": "prettier ./ --write",
        "tsc-check": "tsc -b --noEmit",
        "check-licenses": "check-licenses",
        "check-outdated-packages": "check-outdated-packages",
        "check-all": "run-s lint-check prettier-check tsc-check check-licenses check-outdated-packages",
        "pre-commit-checks": "run-s check-all"
    },
    "dependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.33.0",
        "@next/eslint-plugin-next": "^15.4.6",
        "@vue/eslint-config-typescript": "^14.6.0",
        "angular-eslint": "^20.1.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-playwright": "^2.2.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-turbo": "^2.5.5",
        "eslint-plugin-vue": "^10.4.0",
        "globals": "^16.3.0",
        "typescript-eslint": "^8.39.1"
    },
    "devDependencies": {
        "@wpazderski/node-package-tools": "^1.0.0",
        "@wpazderski/prettier-config": "^1.0.3",
        "@wpazderski/typescript-config": "^1.0.4",
        "eslint": "^9.33.0",
        "husky": "^9.1.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "eslint": "^9.27.0"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10.0.0",
        "npm": "please-use-pnpm",
        "yarn": "please-use-pnpm"
    }
}
